#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_image-size@0.3.5@image-size/bin/image-size" "$@"
  ret=$?
else 
  node  "$basedir/../../../_image-size@0.3.5@image-size/bin/image-size" "$@"
  ret=$?
fi
exit $ret
